{% extends 'layout.html.twig' %}

{% block title %}tous les articles{% endblock %}

{% block content %}

<div class="row d-flex justify-content-center text-center"> 
    {% for article in articles %}    
        <div class="card m-1" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"> {{ article.titre }} </h5>
                <h6 class="card-text text-muted"> crée le : {{ article.dateDeCreation | date("d/m/Y \à H\\hi") }} </h6>
                <h6 class="card-text text-muted"> modifié le : </h6>
                <p class="card-text">{{ article.contenu | slice(0,30) }}...</p>
                <a href="{{ path('app_article', {id: article.id } ) }}" class="btn btn-primary">lire la suite...</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
